@model List<Card>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a class="btn btn-inverse-success" asp-controller="Card" asp-action="Create"> Create</a>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    id
                </th>
                <th>
                    Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    SubTitle
                </th>
                <th>
                    Setting
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Card item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        <img src="~/assets/image/@item.Image" alt="" class="img" style="width:50px; height:80px;">
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.SubTitle
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
